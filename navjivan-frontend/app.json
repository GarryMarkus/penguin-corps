{
  "expo": {
    "name": "navjivan-frontend",
    "slug": "navjivan-frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "navjivanfrontend",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.navjivan.app",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow Navjivan to use your location to send alerts when you enter or exit trigger zones.",
        "NSLocationAlwaysUsageDescription": "Allow Navjivan to use your location in the background for geofencing alerts.",
        "NSLocationWhenInUseUsageDescription": "Allow Navjivan to use your location to show your position on the map.",
        "NSHealthShareUsageDescription": "Allow Navjivan to read your step count from Apple Health to track your Dandi March progress.",
        "UIBackgroundModes": ["location", "fetch", "remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.navjivanfrontend",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Navjivan to use your location to send alerts when you enter or exit trigger zones.",
          "locationAlwaysPermission": "Allow Navjivan to use your location in the background for geofencing alerts.",
          "locationWhenInUsePermission": "Allow Navjivan to use your location to show your position on the map.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#39FF14",
          "sounds": [],
          "mode": "production"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "132046e3-f823-45fc-93d0-cc7d7481aeae"
      }
    }
  }
}
